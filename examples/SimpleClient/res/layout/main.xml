<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/loginLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="login"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/loginText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"
    		android:inputType="text"
    		android:hint="@string/login">
    		<requestFocus />
    	</EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="password"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"
    		android:inputType="textPassword"
    		android:hint="@string/pwd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/gatewaysLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="endpoints"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/gatewaysText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"
    		android:inputType="text"
    		android:hint="@string/endPoint"/>
    </LinearLayout>

   
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/ChannelIDLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Channel ID"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/ChannelIDText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"
    		android:inputType="text"
    		android:hint="@string/channelID"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/timeOutLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="timeOut"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/timeOutText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:inputType="number" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/messageLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="messagetxt"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/messageText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/relevantOffsetLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="relevantOffset"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/relevantOffsetText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:inputType="number"
    		android:background="#F7F7F7"
    		android:textSize="10sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/ConvidLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Convid"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/ConvidText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/ConvStateLabel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="ConvState"
            android:padding="0dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/ConvStateText"
            android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="0dp"
    		android:background="#F7F7F7"
    		android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" >

        <RadioGroup
            android:id="@+id/transportGroupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/socketButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/socketio"
                android:textSize="10sp"
                android:paddingLeft="20dp"
                android:checked="true"
                android:button="@drawable/button_radio" />

            <TextView
                android:id="@+id/connectionStatusLabel"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="DISCONNECTED" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" >

        <RadioGroup
            android:id="@+id/MessageGroupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/persistentButton"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="@string/persistent"
                android:textSize="10sp" 
                android:paddingLeft="20dp"
                android:layout_marginBottom="1dp"
                android:button="@drawable/button_radio"/>

            <RadioButton
                android:id="@+id/notPersistentButton"
                android:checked="true"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="@string/not_persistent"
                android:textSize="10sp" 
                android:paddingLeft="20dp"
                android:button="@drawable/button_radio"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
           
            
            <Button
                android:id="@+id/ConnectionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect"
                android:textSize="10sp" />

            <Button
                android:id="@+id/DeconnectionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnect"
                android:textSize="10sp" />

            <Button
                android:id="@+id/ClearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:textSize="10sp" />
                        
            <Button
                android:id="@+id/SubscribeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub"
                android:textSize="10sp" />

            <Button
                android:id="@+id/SetFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setfilter"
                android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

            <Button
                android:id="@+id/UnsubscribeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unsub"
                android:textSize="10sp" />

            <Button
                android:id="@+id/SendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:textSize="10sp" />

            <Button
                android:id="@+id/GetSubcriptionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/getsubs"
                android:textSize="10sp" />

            <Button
                android:id="@+id/PubConvStateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pubconvsta"
                android:textSize="10sp" />

            <Button
                android:id="@+id/ExitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:textSize="10sp" />
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/outputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </ScrollView>

</LinearLayout>